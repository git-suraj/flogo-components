{
  "title": "JSON Accumulate Activity",
  "name": "tibco-wi-accumulate",
  "author": "TIBCO Software Inc.",
  "type": "flogo:activity",
  "version": "1.1.0",
  "display": {
    "visible": true,
    "description": "This activity appends the json message and returns it as an array."
  },
  "ref": "git.tibco.com/git/product/ipaas/wi-contrib.git/contributions/General/activity/accumulate",
  "inputs": [

    {
      "name": "type",
      "type": "string",
      "value": "Append",
      "display": {
        "description": "Set Type",
        "name": "Operation",
        "type": "dropdown",
        "selection": "single",
        "appPropertySupport": true
      },
      "allowed": [
        "Append",
        "Get" ,
        "Clear"
      ]

    },
    {
      "name": "item",
      "type": "complex_object",
      "display": {
        "description": "An JSON data or schema for the input",
        "type": "texteditor",
        "syntax": "json",
        "name": "Input Schema",
        "mappable": true
      }
    } ,
    {
      "name": "key",
      "type": "string",
      "required": true
    }

  ],
  "outputs": [
    {
      "name": "output",
      "type": "array"
    }
  ]
}